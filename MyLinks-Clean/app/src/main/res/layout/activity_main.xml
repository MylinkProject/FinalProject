<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nadaalbar.mylinks.MainActivity">


    <TextView
        android:id="@+id/text_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/text_add" />

    <TextView
        android:id="@+id/text_links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/text_links"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/text_categories"

        android:visibility="gone" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/White"
        app:itemTextColor="@color/White"
        app:menu="@menu/bottom_navigation_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp">

        <Button
            android:id="@+id/addLink2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="97dp"
            android:textColor="@color/White"
            android:background="@color/orange"
            android:text="Add Link" />

        <Button
            android:id="@+id/addCat2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_above="@+id/addLink2"
            android:layout_alignStart="@+id/addLink2"
            android:layout_marginBottom="64dp"
            android:textColor="@color/White"
            android:background="@color/orange"
            android:text="Add Category" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
