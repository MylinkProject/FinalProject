<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nadaalbar.mylinks.AddLink">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/linkId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:textColor="@color/White"
            android:inputType="textPersonName"
            android:text="Add link" />

        <EditText
            android:id="@+id/AddDescId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/linkId"
            android:layout_below="@+id/linkId"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:textColor="@color/White"
            android:inputType="textPersonName"
            android:text="Add Description" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/AddDescId"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="26dp"
            android:padding="8dip"
            android:text="Select Category"
            android:textSize="18dp"
            android:textColor="@color/White"

            android:id="@+id/textView" />

        <!-- Spinner Dropdown -->
        <!--  android:prompt="@string/spinner_title"-->


        <Button
            android:id="@+id/saveId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:text="Save"
            android:textColor="@color/White"
            android:background="@color/orange"
            tools:text="Save" />

        <Button
            android:id="@+id/stopbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/saveId"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:textColor="@color/White"
            android:background="@color/orange"
            android:text="Stop" />

        <Button
            android:id="@+id/startbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stopbtn"
            android:layout_alignBottom="@+id/stopbtn"
            android:layout_marginEnd="27dp"
            android:layout_toStartOf="@+id/stopbtn"
            android:textColor="@color/White"
            android:background="@color/orange"
            android:text="Start" />

        <Button
            android:id="@+id/playbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stopbtn"
            android:layout_alignBottom="@+id/stopbtn"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/stopbtn"
            android:textColor="@color/White"
            android:background="@color/orange"
            android:text="Play" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/stopbtn"
            android:layout_alignStart="@+id/startbtn"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"

            android:textColor="@color/White"
            android:textSize="18dp"
            android:text="Record a Voice Note" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/White"
            style="@style/mySpinnerItemStyle"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
